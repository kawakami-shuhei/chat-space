.message
  .message__upper-info
    .message__upper-info__talker
      = message.user.name
    .message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__upper-text
    - if message.body.present?
      %p.lower-message__content
        = message.body
    = image_tag message.image.url, class: 'message__upper-text__image' if message.image.present?